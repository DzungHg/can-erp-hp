            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="SalesPersonAdressBook_FK" style="width: 100%" Text="Sales Person Adress Book Fk">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric style="width: 100%" @bind-Value="@(tblsocustomer.SalesPersonAdressBook_FK)" Name="SalesPersonAdressBook_FK">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="CommissionPercent" style="width: 100%" Text="Commission Percent">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric style="width: 100%" @bind-Value="@(tblsocustomer.CommissionPercent)" Name="CommissionPercent">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="SalesPerson_MTD_Goal" style="width: 100%" Text="Sales Person Mtd Goal">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric style="width: 100%" @bind-Value="@(tblsocustomer.SalesPerson_MTD_Goal)" Name="SalesPerson_MTD_Goal">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="SalesPerson_YTD_Goal" style="width: 100%" Text="Sales Person Ytd Goal">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric style="width: 100%" @bind-Value="@(tblsocustomer.SalesPerson_YTD_Goal)" Name="SalesPerson_YTD_Goal">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="ChargeInterest" style="width: 100%" Text="Charge Interest">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenCheckBox TriState="true" @bind-Value="@(tblsocustomer.ChargeInterest)" Name="ChargeInterest">
                </RadzenCheckBox>
