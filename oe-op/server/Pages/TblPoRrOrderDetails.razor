@page "/tbl-po-rr-order-details"
@layout MainLayout
@inherits CanErp2.Pages.TblPoRrOrderDetailsComponent

@using Radzen
@using Radzen.Blazor
@using CanErp2.Models.DbAtVdc2
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Tbl Po Rr Order Details">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getTblPoRrOrderDetailsResult" TItem="CanErp2.Models.DbAtVdc2.TblPoRrOrderDetail" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoRrOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoRrOrderDetail" Property="RR_FK" SortProperty="TblPoRecReport.PO_ID" FilterProperty="TblPoRecReport.PO_ID" Title="Tbl Po Rec Report">
              <Template Context="data">
              @(data.TblPoRecReport?.PO_ID)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoRrOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoRrOrderDetail" Property="Inventory_FK" SortProperty="TblIcInventory.Warehouse_FK" FilterProperty="TblIcInventory.Warehouse_FK" Title="Tbl Ic Inventory">
              <Template Context="data">
              @(data.TblIcInventory?.Warehouse_FK)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoRrOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoRrOrderDetail" Property="Unit_Price" Title="Unit Price">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoRrOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoRrOrderDetail" Property="QtyOrdered" Title="Qty Ordered">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoRrOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoRrOrderDetail" Property="QtyReceived" Title="Qty Received">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoRrOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoRrOrderDetail" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="canErp2ModelsDbAtVdc2TblPoRrOrderDetail">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, canErp2ModelsDbAtVdc2TblPoRrOrderDetail))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
