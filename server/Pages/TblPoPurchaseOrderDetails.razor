@page "/tbl-po-purchase-order-details"
@layout MainLayout
@inherits CanErp2.Pages.TblPoPurchaseOrderDetailsComponent

@using Radzen
@using Radzen.Blazor
@using CanErp2.Models.DbAtVdc2
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Tbl Po Purchase Order Details">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getTblPoPurchaseOrderDetailsResult" TItem="CanErp2.Models.DbAtVdc2.TblPoPurchaseOrderDetail" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoPurchaseOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoPurchaseOrderDetail" Property="PO_FK" SortProperty="TblPoPurchaseOrder.POStatus_FK" FilterProperty="TblPoPurchaseOrder.POStatus_FK" Title="Tbl Po Purchase Order">
              <Template Context="data">
              @(data.TblPoPurchaseOrder?.POStatus_FK)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoPurchaseOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoPurchaseOrderDetail" Property="Inventory_FK" SortProperty="TblIcInventory.Warehouse_FK" FilterProperty="TblIcInventory.Warehouse_FK" Title="Tbl Ic Inventory">
              <Template Context="data">
              @(data.TblIcInventory?.Warehouse_FK)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoPurchaseOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoPurchaseOrderDetail" Property="Unit_Price" Title="Unit Price">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoPurchaseOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoPurchaseOrderDetail" Property="QtyOrdered" Title="Qty Ordered">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoPurchaseOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoPurchaseOrderDetail" Property="QtyReceived" Title="Qty Received">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoPurchaseOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoPurchaseOrderDetail" Property="SubTotal" Title="Sub Total">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoPurchaseOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoPurchaseOrderDetail" Property="TaxRate" Title="Tax Rate">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoPurchaseOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoPurchaseOrderDetail" Property="DiscountPercent" Title="Discount Percent">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoPurchaseOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoPurchaseOrderDetail" Property="Discount" Title="Discount">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoPurchaseOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoPurchaseOrderDetail" Property="Tax" Title="Tax">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CanErp2.Models.DbAtVdc2.TblPoPurchaseOrderDetail" Context="canErp2ModelsDbAtVdc2TblPoPurchaseOrderDetail" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="canErp2ModelsDbAtVdc2TblPoPurchaseOrderDetail">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, canErp2ModelsDbAtVdc2TblPoPurchaseOrderDetail))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
