        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getTblPoOrderStatusesResult" TItem="CanErp2.Models.DbAtVdc2.TblPoOrderStatus" RowSelect="@Grid0RowSelect">
