@page "/tbl-po-order-statuses"
@layout MainLayout
@inherits CanErp2.Pages.TblPoOrderStatusesComponent

@using Radzen
@using Radzen.Blazor
@using CanErp2.Models.DbAtVdc2
<RadzenContent Container="main">
